<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="report_profesor_document">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Ficha del Profesor</h2>

                <p><strong>Nombre:</strong> <span t-field="doc.name"/></p>
                <p><strong>DNI:</strong> <span t-field="doc.dni"/></p>
                <p><strong>Autoescuela:</strong> <span t-field="doc.autoescuela_id.name"/></p>
                <p><strong>Coche:</strong> <span t-field="doc.coche"/></p>
                <p><strong>Fecha de incorporación:</strong> <span t-field="doc.incorporacion"/></p>
                <p><strong>Antigüedad:</strong> <span t-field="doc.antiguedad"/> años</p>

                <h3>Alumnos asignados</h3>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>DNI</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="doc.alumnos_ids" t-as="alumno">
                            <td><span t-field="alumno.name"/></td>
                            <td><span t-field="alumno.dni"/></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

</odoo>
