<odoo>
    <template id="report_profesor_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">Informe de Profesor</h2>
                        <br />

                        <h4>Datos Personales</h4>
                        <hr />
                        <div class="row">
                            <div class="col-6">
                                <strong>Nombre y Apellidos:</strong>
                                <p t-field="o.name"/>
                            </div>
                            <div class="col-6">
                                <strong>DNI:</strong>
                                <p t-field="o.dni"/>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <strong>Vehículo asignado:</strong>
                                <p t-field="o.coche"/>
                            </div>
                            <div class="col-6">
                                <strong>Fecha de incorporación:</strong>
                                <p t-field="o.incorporacion"/>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <strong>Antigüedad:</strong>
                                <p>
                                    <span t-field="o.antiguedad"/> años
                                </p>
                            </div>
                            <div class="col-6">
                                <strong>Autoescuela:</strong>
                                <p t-field="o.autoescuela_id.name"/>
                            </div>
                        </div>

                        <br />
                        <h4>Información de la Autoescuela</h4>
                        <hr />
                        <div class="row">
                            <div class="col-6">
                                <strong>Localidad:</strong>
                                <p t-field="o.autoescuela_id.localidad"/>
                            </div>
                            <div class="col-6">
                                <strong>Contacto:</strong>
                                <p t-field="o.autoescuela_id.contacto"/>
                            </div>
                        </div>

                        <br />
                        <h4>Alumnos Asignados</h4>
                        <hr />
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>DNI</th>
                                    <th>Matrícula</th>
                                    <th>Prácticas</th>
                                    <th>Teórico</th>
                                    <th>Práctico</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="o.alumno_ids">
                                    <tr t-foreach="o.alumno_ids" t-as="alumno">
                                        <td><span t-field="alumno.name"/></td>
                                        <td><span t-field="alumno.dni"/></td>
                                        <td><span t-field="alumno.matricula"/></td>
                                        <td><span t-field="alumno.numero_practicas"/></td>
                                        <td><span t-field="alumno.aprobado_teorico"/></td>
                                        <td><span t-field="alumno.aprobado_practico"/></td>
                                    </tr>
                                </t>
                                <t t-else="">
                                    <tr>
                                        <td colspan="6" class="text-center">
                                            No hay alumnos asignados
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>