<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- TREE -->
    <record id="view_autoescuela_tree" model="ir.ui.view">
        <field name="name">autoescuela.autoescuela.tree</field>
        <field name="model">autoescuela.autoescuela</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="domicilio"/>
                <field name="localidad"/>
                <field name="provincia"/>
                <field name="contacto"/>
                <field name="alumnos_count"/>
                <field name="profesores_count"/>
            </tree>
        </field>
    </record>

    <!-- FORM con NOTEBOOKS -->
    <record id="view_autoescuela_form" model="ir.ui.view">
        <field name="name">autoescuela.autoescuela.form</field>
        <field name="model">autoescuela.autoescuela</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="domicilio"/>
                        <field name="localidad"/>
                        <field name="provincia"/>
                        <field name="contacto"/>
                    </group>
                    <notebook>
                        <page string="Profesores">
                            <field name="profesor_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="dni"/>
                                    <field name="coche"/>
                                    <field name="incorporacion"/>
                                    <field name="antiguedad"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Alumnos">
                            <field name="alumno_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="dni"/>
                                    <field name="matricula"/>
                                    <field name="profesor_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="ExÃ¡menes">
                            <field name="examen_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="fecha"/>
                                    <field name="estado"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group string="Contadores">
                        <field name="alumnos_count"/>
                        <field name="profesores_count"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_alumno" model="ir.actions.act_window">
        <field name="name">Alumnos</field>
        <field name="res_model">autoescuela.alumno</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>