<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- TREE -->
    <record id="view_examen_tree" model="ir.ui.view">
        <field name="name">autoescuela.examen.tree</field>
        <field name="model">autoescuela.examen</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="fecha"/>
                <field name="alumno_id"/>
                <field name="carnet"/>
                <field name="precio"/>
                <field name="estado"/>
            </tree>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_examen_form" model="ir.ui.view">
        <field name="name">autoescuela.examen.form</field>
        <field name="model">autoescuela.examen</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="fecha"/>
                        <field name="alumno_id"/>
                        <field name="autoescuela_ids"/>
                        <field name="moneda_id"/>
                        <field name="precio"/>
                        <field name="clases"/>
                        <field name="carnet"/>
                        <field name="estado"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- CALENDAR -->
    <record id="view_examen_calendar" model="ir.ui.view">
        <field name="name">autoescuela.examen.calendar</field>
        <field name="model">autoescuela.examen</field>
        <field name="arch" type="xml">
            <calendar date_start="fecha" 
                      color="estado">
                <field name="name"/>
                <field name="alumno_id"/>
                <field name="carnet"/>
            </calendar>
        </field>
    </record>

    <!-- SEARCH CORREGIDO -->
    <record id="view_examen_search" model="ir.ui.view">
        <field name="name">autoescuela.examen.search</field>
        <field name="model">autoescuela.examen</field>
        <field name="arch" type="xml">
            <search string="Buscar Exámenes">
                <field name="name"/>
                <field name="fecha"/>
                <field name="carnet"/>
                <field name="alumno_id"/>
                <filter name="filter_carnet" 
                        string="Con Carnet" 
                        domain="[('carnet','!=',False)]" 
                        context="{'group_by': 'carnet'}"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Carnet" name="group_carnet" context="{'group_by': 'carnet'}"/>
                    <filter string="Estado" name="group_estado" context="{'group_by': 'estado'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_examen" model="ir.actions.act_window">
        <field name="name">Exámenes por Alumno</field>
        <field name="res_model">autoescuela.examen</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="search_view_id" ref="view_examen_search"/>
    </record>
</odoo>
